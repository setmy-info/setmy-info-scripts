<?xml version="1.0" encoding="utf-8"?>

<project name="setmy-info-scripts" default="all" basedir=".">

    <property file="build.properties"/>

    <target name="all" depends="setmy-info-scripts"/>

    <target name="setmy-info-scripts">
        <exec executable="git" osfamily="unix" dir=".">
            <arg value="checkout"/>
            <arg value="master"/>
        </exec>
        <exec executable="./configure" osfamily="unix" dir=".">
            <arg value="clean"/>
        </exec>
        <exec executable="./configure" osfamily="unix" dir=".">
            <arg value="release"/>
        </exec>
        <exec executable="make" osfamily="unix" dir=".">
            <arg value="clean"/>
        </exec>
        <exec executable="make" osfamily="unix" dir=".">
            <arg value="all"/>
            <arg value="test"/>
            <arg value="package"/>
        </exec>
    </target>

</project>
