#!/bin/sh

# POSIX-compatible script to create and push a Git version tag
# and update a 'latest' lightweight tag to point to it.

# Exit immediately if a command fails or if an unset variable is used
set -eu

if [[ $# -ne 1 ]]; then
  echo "Usage: $0 <version>"
  exit 1
fi

VERSION="$1"

if git rev-parse "$VERSION" >/dev/null 2>&1; then
  echo "âŒ Tag $VERSION already exists!"
  exit 1
fi

echo "ðŸ·ï¸  Creating tag $VERSION..."
git tag -a "$VERSION" -m "$VERSION"

echo "ðŸ”„ Updating tag 'latest' -> $VERSION"
git tag -f latest "$VERSION"

echo "ðŸš€ Pushing tags..."
git push -f origin latest
git push --tags

echo "âœ… Done: $VERSION tagged and pushed."

exit 0
